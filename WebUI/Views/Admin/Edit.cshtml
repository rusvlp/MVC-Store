@model Domain.Entities.Part

@{
    ViewBag.Title = "Админ панель: редактирование товара";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактирование товара «@Model.Name»</h2>


@using (Html.BeginForm("Edit", "Admin"))
{
    @Html.EditorForModel()
    <input type="submit" value="Сохранить" />
    @Html.ActionLink("Отменить изменения и вернуться к списку", "Index")
}
<script>
    document.querySelector(".editor-label").style.display = "none";
    document.querySelector(".editor-field").style.display = "none";
</script>